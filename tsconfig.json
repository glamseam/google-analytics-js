{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2017"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
